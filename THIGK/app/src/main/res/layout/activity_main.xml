<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_ntu"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ỨNG DỤNG THI GIỮA KỲ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnChucNang2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Chức năng 2"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/btnChucNang3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Chức năng 3"
        android:textSize="16sp"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/btnChucNang4"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Chức năng 4"
        android:textSize="16sp"
        android:backgroundTint="#FF9800"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/btnAboutMe"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="About Me"
        android:textSize="16sp"
        android:backgroundTint="#9C27B0"
        android:elevation="4dp"/>
</LinearLayout>